
{% block top_css_block %}
	<style>
		.pz-grid-2-cols-wrapper form{
			background: rgba(210, 210, 210, 0.2);
			padding: 10px 30px 0 30px;
			border: solid 1px rgba(161, 161, 161, 0.2);
			border-radius: 0;
			margin-bottom: 15px;
		}
		.pz-drop-down-wrapper .pz-drop-down-children {
			width: calc(100% - 30px);
		}
		.pz-form-widget.btn.btn-primary{
			color: #ffffff;
			padding: 5px 5px;
			text-shadow: none;
			height: 42px;
			font-size: 1.1em;
		}
		
		.pz-form-widget.btn.pz-grid-right{
			grid-column: 3 / 4;
			display: inline-block;
			height: 60px;
			width: 60%;
			justify-self: right;
		}
		.pz-drop-down .pz-form-widget.form-control{
			width: 100%;
			height: 49px;
			border: NONE;
			font-weight: 300;
			letter-spacing: 0.05em;
			font-size: 1.25em;
			color: black;
			border-bottom: solid 1px rgba(167, 167, 167, 0.5);
			border-top: solid 1px rgba(167, 167, 167, 0.5);
			border-radius: 0;
			outline: none;
		}
		.pz-drop-down .pz-drop-down-indicator {
			display: inline-block;
			position: absolute;
			top: 1px;
			right: 0;
			padding: 13px 17px 13px 17px;
			background:#757575;
			border-left: 1px solid #d1d1d1;
			cursor: pointer;
		}
	</style>
{% endblock %}

<div id="pz-year-chooser-box " class="pz-year-chooser-box ">
	<div class="pz-year-huge">
		<span class="pz-strong-huge">{{ getActualDate() }}</span>
	</div>
	<div class="pz-year-chooser">
		{{ buildYearDropDownWidget(2008, 2099) }}
	</div>
</div>
